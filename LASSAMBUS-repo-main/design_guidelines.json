{
  "brand_identity": {
    "name": "LASAMBUS Portal",
    "tone": "Urgent, Professional, Trustworthy, Clinical",
    "colors": {
      "primary": {
        "name": "Lagos Medical Blue",
        "hex": "#0056b3",
        "tailwind": "bg-blue-700"
      },
      "secondary": {
        "name": "Lagos State Green",
        "hex": "#008751",
        "tailwind": "bg-green-600"
      },
      "accent": {
        "name": "Emergency Red",
        "hex": "#dc2626",
        "tailwind": "bg-red-600"
      },
      "background": {
        "light": "#f8fafc",
        "dark": "#0f172a"
      }
    },
    "typography": {
      "headings": {
        "family": "Manrope",
        "weights": ["600", "700", "800"],
        "usage": "Page titles, Modal headers, Key metrics"
      },
      "body": {
        "family": "Public Sans",
        "weights": ["400", "500"],
        "usage": "Form labels, Data tables, Descriptions"
      }
    }
  },
  "design_strategies": {
    "mobile_field_app": {
      "theme": "Dark Mode Default (Night Ops)",
      "layout": "Single-Column Card Stack",
      "interaction": "Thumb-friendly large touch targets (min 48px height)",
      "visuals": "High contrast text, minimal gradients, clear status indicators"
    },
    "admin_dashboard": {
      "theme": "Light Mode Default (Clinical)",
      "layout": "Bento Grid / Control Room",
      "interaction": "Dense data tables, quick filters, export actions",
      "visuals": "Clean white cards, subtle shadows, color-coded status badges"
    }
  },
  "component_rules": {
    "buttons": {
      "primary": "rounded-full font-bold shadow-lg hover:shadow-xl transition-all active:scale-95",
      "secondary": "rounded-full border-2 border-slate-200 hover:bg-slate-50",
      "emergency": "rounded-full bg-red-600 text-white animate-pulse-slow shadow-red-500/50"
    },
    "cards": {
      "style": "rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm",
      "hover": "hover:border-blue-500/50 transition-colors duration-300"
    },
    "inputs": {
      "style": "h-12 rounded-lg border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-slate-900"
    },
    "modals": {
      "overlay": "backdrop-blur-md bg-slate-900/50",
      "content": "rounded-2xl border border-slate-700 shadow-2xl animate-in fade-in zoom-in-95"
    }
  },
  "assets": {
    "images": {
